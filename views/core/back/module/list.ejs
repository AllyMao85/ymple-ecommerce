                        <th></th>

                    </tr>
                    </thead>
                    <tbody>
                    <% listModule.forEach(function(module){ %>
                    <tr data-id="<%= module.id %>">

                        <!--td><%= module.createdAt %></td-->
                        <td><%= module.name %></td>
                        <td><%= module.category %></td>


                        <td>

