<div class="container">
    <h3><a href="/admin"><i class="fa fa-fw fa-chevron-circle-left"></i></a>PRODUCT NEW</h3>


    <form role="form" action="/admin/product/new/validation" method="POST">


        <div class="row clearfix">
            <div class="col-lg-4">


                <Label for="name"> <%= __('name') %> </label>
                           <Input type="text" class="form-control" id="name" name="name"
                                  placeholder="<%= __('Please enter your name') %>" value="">
                        
            </div>
                    
            <div class="col-lg-4">
                           <Label for="price"> <%= __('Price') %> </label>
                           <Input type="text" class="form-control" id="price" name="price"
                                  placeholder="<%= __('Please enter the price') %>" value="">
                        
            </div>
                    
            <div class="col-lg-4">
                           <Label for="stock"> <%= __('Inventory') %> </label>
                           <Input type="text" class="form-control" id="stock" name="stock"
                                  placeholder="<%= __('Please enter the inventory') %>" value="">


            </div>
        </div>

        <div class="row clearfix">
            <div class="col-lg-4">


                <Label for="video"> <%= __('VIMEO Video ID') %> </label> <br>
                          <input type="text" class="form-control" id="video" name="video"
                                 placeholder="<%= __('VIMEO image ID input please.') %>"
                                 Value="">
                        
            </div>
                    
            <div class="col-lg-4">
                          <Label for="thumbnail"> <%= __('representative picture') %> </label> <br>
                          <Input type="text" class="form-control" id="thumbnail" name="thumbnail"
                                 placeholder="<%= __('representative image URL input please') %>"
                                 value="">
                        
            </div>
                    
            <div class="col-lg-4">
                          <Label for="thumbnail"> <%= __('Product photos') %> </label> <br>
                          <Input type="text" class="form-control" id="photos" name="photos"
                                 placeholder="<%= __('product images URL to enter your (comma as the separator)') %>"
                                 value="">
                        
            </div>

                    
        </div>


        <div class="row clearfix">

            <div class="col-lg-4">
                          <Label for="name"> <%= __('product') %> </label>
                          <Select name="related" class="form-control">
                                
                    <Option value=""> <%= __('No') %></option>


                    {% for product in products %}
                    <option value="{{ product.id %>">{{ product.name
                        %>
                    </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-lg-4">


                <Label for="tags"> <%= __('tags') %> </label>
                <Input type="text" class="form-control" id="tags" name="tags"
                       placeholder="<%= __('Please enter tags separated by commas') %>" value="">


            </div>
        </div>

        <div class="row clearfix">
            <div class="col-lg-4">


                <Label for="description"> <%= __('description') %> </label>
                           <Textarea class="form-control" name="description" id="description" cols="30"
                                     rows="4"
                                     placeholder="<%= __('the product to explain MARKDOWN format as input please') %> ">
                </textarea>
                          
                <!-- <Input type = "text" class = "form-control" id = "name" name = "name" placeholder = "{( 'Enter the name') {__%>"> -->

            </div>
            <!-- <div class="form-group" style="margin-left: 15px;">
          <div class="checkbox">
            <label>
              {% if edit.isSelling %}
              <input type="checkbox" name="isSelling" checked> {{ __('판매') %>
              {% else %}
              <input type="checkbox" name="isSelling"> {{ __('판매') %>
              {% endif %}
            </label>
          </div>
        </div> -->

        </div>

        <div class="row clearfix">

            <div class="col-lg-4">

                <p class="help-block">

                    <i class="fa fa-fw fa-warning"> </i>
                    <%= __('When you register your product is stored in Unavailable state by default.') %>

                </p>

            </div>

            <div class="col-lg-4">

                          
                <% if (typeof edit == 'object' && edit) { %>
                          
                <Button type="submit" class="btn btn-primary btn-lg pull-right"> <%= __('modify') %></button>
                          
                <% } else { %>
                          
                <Button type="submit" class="btn btn-primary btn-lg pull-right"> <%= __('Register') %></button>

                <% } %>
            </div>
        </div>
    </form>
</div>


