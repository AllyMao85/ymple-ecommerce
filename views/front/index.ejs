<%- include top_space.ejs %>
<%#= __('name_shop') %>

<div class="container" width="100%">
    <% if (products.length == 0) { %>
    <div style="text-align: center; margin: 150px;">
        <h3><i class="fa fa-fw fa-warning"></i></h3>
        <h3><%= __('This item is not yet registered.') %></h3>
    </div>
    <% } %>

    <div class="container">


        <% products.forEach(function(product, i){ %>
        <% if (i == 0 || i == 4 || i == 8 || i == 12 || i == 16  ) { %>
        <div class="row">
            <% } %>
            <div class="col-sm-3 col-md-3">
                <div class="thumbnail">
                    <a href="/product/<%= product.id %>">
                        <% if (product.image){ %>
                        <img class="img-rounded-ymple" src="<%= product.image[0] %>">
                        <% }else { %>
                        <img class="img-rounded-ymple" src="/images/new_prod_trans.jpg">
                        <% } %>
                    </a>

                    <%# if (product.thumbnail){ %>
                    <%#  product.thumbnail  } else {  "http://lorempixel.com/500/500" } %>
                    <div class="caption text-left">
                        <h3><%= product.name %></h3>

                        <span class="badge badge-info pull-right"><%= sails.config.project.currency.symbol %>
                            <%= product.price | 'currency' %></span></h3>
                        <p class="ellipsis">
                            <%= product.description | 'description' %>
                        </p>
                        <p>
                            <input type="text" style="width: 20px;" value="1"/>
                            <button data-id="<%= product.id %>" data-role="add" class="btn btn-default"><%= __('Add to Cart') %></button>
                            <button data-id="<%= product.id %>" data-role="buy" class="btn btn-primary"><%= __('purchase') %></button>
                        </p>
                    </div>
                </div>
            </div>

            <% if ( i == 3 || i == 7 || i == 11 || i == 15  ) { %>
        </div>
        <% } %>
        <% }) %>
    </div>






</div><!-- /.container -->
</div><!-- PRODUCT -->

<%- include layout %>


<script type="text/javascript">
    $(document).ready(function () {
        var $add = $('button[data-role="add"]');
        var $buy = $('button[data-role="buy"]');
        $add.on('click', AddToCart);
        $buy.on('click', AddToCart);
        function AddToCart() {
            var product_id = $(this).data('id');
            var quantity = $(this).parent().find('input').val();
            var loc = '/';

            if ($(this).data('role') === 'buy') {
                loc = '/cart';
            }

            $.ajax({
                type: 'GET',
                url: '/cart/add/' + product_id + '?quantity=' + quantity,
                success: function (data, status) {
                    window.location = loc;
                    return;
                },
                error: function (error) {
                    console.log(error);
                    return;
                }
            });
        }
    });
</script>

