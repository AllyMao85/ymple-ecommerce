<div class="container" style="margin-bottom: 70px;">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/" style="color: white;"><%= sails.config.project.name %></a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="<%= __('Enter a product name') %>" name="name" value="<%= query %>"/>
        </div>
        <button type="submit" class="btn btn-default"><%= __('Search') %></button>
      </form>

      <ul class="nav navbar-nav navbar-right">
        <li>
          <a href="/cart"><i class="fa fa-fw fa-shopping-cart"></i> <%= __('shopping basket') %> &nbsp; <span class="badge badge-default"><%= cart.length %></span></a>
        </li>
        <% if (this.admin) { %>
        <li class="dropdown">
          <a href="/admin">{{ __('manager') }}</a>
        </li>
        <% } %>
        <li class="dropdown">
          <% if ((!user) && (!admin)) { %>
          <a href="/login">
            {{ __('login') }}
          </a>
          <% } %>
          <% if (user) { %>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <% if (user.name) { %>
            <%= user.name %>
            <% } else { %>
            <%= user.email %>
            <% } %>
            <i class="fa fa-fw fa-lg fa-cog"></i><strong class="caret"></strong>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li class="dropdown-header">{{ __('User Menu') }}</li>
            <% if (user.permission == 'ADMIN') { %>
            <li><a href="/admin">{{ __('Manager page') }}</a></li>
            <% } %>
            <li><a href="/profile" id="edit-profile">{{ __('my page') }}</a></li>
            <li class="divider"></li>
            <li><a href="/logout">{{ __('Log out') }}</a></li>
          </ul>
          <% } %>
        </li>
      </ul>
    </div>
  </nav>
</div>