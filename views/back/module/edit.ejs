
<div class="">
    <h4 style="color:forestgreen"><a href="/admin"></a>Module Configuration</h4>
    <form role="form" action="/admin/category/create/validation" method="POST">
        <div class="row">
            <div class="col-sm-12">
                <label> <%= __('name') %> </label>
                           <input disabled type="text" class="form-control" id="name" name="name"
                                  placeholder="" value="<%= nameModule %>">
            </div>
        </div>

        <br>
        <div class="row">
            <div class="col-sm-12">
                <label> <%= __('representative picture') %> </label>
                           <input type="text" class="form-control" id="thumbnail" name="thumbnail"
                                  placeholder="<%= __('placeholder_url') %>" value="">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-12">
                <label> <%= __('product') %> </label>
                            <Select name="related" class="form-control">            
                    <Option value=""> <%= __('No') %></option>
                    <% if (typeof products == 'object' && products) { %>
                    <% products.forEach(function(product){ %>
                    <option value="<% product.id %>"
                        <% product.name  %>
                    </option>
                    <% }); %>
                    <% } %>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <label style="align-content: center;text-align: center">  <%= __('tags') %> </label>
                           <input type="text" class="form-control" id="tags" name="tags" placeholder="<%= __('Please enter tags separated by commas') %>" value="">
            </div>
        </div>
<br>
        <div class="row">
            <div class="col-sm-12">
                <label style="align-content: center;text-align: center">  <%= __('Active') %> </label>
                <input type="checkbox" name="isActive" value="">
            </div>
        </div>

        <br>
        <br>
        <div class="row">
            <div class="col-sm-12" style="text-align: center;align-content: center">

                <% if (typeof edit == 'object' && edit) { %> 
                <Button type="submit" class="btn btn-primary btn-lg pull-center"> <%= __('modify') %></button>
                <% } else { %>
                <Button type="submit" class="btn btn-primary btn-lg pull-center"> <%= __('Save') %></button>
                <% } %>
            </div>

        </div>
    </form>
</div>




